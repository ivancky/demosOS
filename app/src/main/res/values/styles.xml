<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SeekBarColorBlue"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorPatina</item>

    </style>

    <style name="SeekBarColorLime"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorLime</item>
    </style>

    <style name="SeekBarColorRed"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorRed</item>
    </style>

    <style name="SeekBarColorFarRed"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorFarRed</item>
    </style>

    <style name="SeekBarColorPurple"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorPurple</item>
    </style>

    <style name="SeekBarColorDeepBlue"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="SeekBarColorGreen"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="SeekBarColorYellow"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorYellow</item>
    </style>

    <style name="SeekBarColorAmber"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SeekBarColorWhite1"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorBlack2</item>
    </style>

    <style name="SeekBarColorWhite2"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorBlack2</item>
    </style>

    <style name="PcmTextAppearance" parent="@android:style/Theme.Holo.Light">
        <!-- <item name="textColor">?textColorPrimaryInverse</item> -->
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <!-- <item name="android:menuItemBackground">@color/read</item> -->
    </style>

    <style name="MyToggle" parent="@android:style/Widget.Material.Light.Button.Toggle">
        <item name="android:textColorPrimary">#ff7043</item>
        <item name="colorAccent">#26a69a</item>
        <item name="android:colorControlNormal">#f9a825</item>
        <item name="android:colorControlHighlight">@color/colorRed</item>
        <item name="android:colorButtonNormal">@color/candy_primary</item>
    </style>

</resources>
